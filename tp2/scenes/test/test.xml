<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 

    <globals background="0 0.0039 0.039 1" ambient="0.1 0.1 0.1 1" /> 


    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="90" 
            near="0.1" 
            far="100" 
            location="4 4 4" 
            target="0 0.0 0" /> 
    </cameras> 

    <skybox size="0 0 0" center="0 0 0" emissive="0.0 0.0 0.0 0.0" intensity="0.0" up="scenes/test/textures/boat.jpg" down="scenes/test/textures/boat.jpg" left="scenes/test/textures/boat.jpg" right="scenes/test/textures/boat.jpg" front="scenes/test/textures/boat.jpg" back="scenes/test/textures/boat.jpg"/>

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>        
        <texture id="tex" filepath="scenes/test/textures/boat.jpg" />
    </textures> 

    <materials> 
		<material id="app" 
            emissive="0.0 0.0 0.0 1" 
			color="1.0 0.0 0.0 1.0" 
            specular="0.0 0.0 0.0 1" 
            shininess="0" 
            twosided="true"
            textureref="tex"
        />

        <material id="app2" 
            emissive="0.0 0.0 0.0 1" 
			color="0.0 1.0 0.0 1.0" 
            specular="0.0 0.0 0.0 1" 
            shininess="0" 
            twosided="true"
            textureref="tex"
        />
    </materials> 

    <graph rootid="scene"> 
		<node id="scene"> 
            <children> 
				<noderef id="test" />
                <noderef id="base" /> 
               
                <pointlight id="light1" enabled="true" 
                    color="1 1 1 1" 
                    intensity="50.0"
                    distance="20"
                    decay="1"
                    castshadow="true"
                    position="0 6 0" 
                /> 
               

            </children> 
        </node>
        <node id="test" castshadows = "true">
            <transforms>
                <rotate value3="-40 0 0" />
                <translate value3="0 2 2" />  
            </transforms>

            <materialref id="app" />

            <children>
                <!-- <primitive>
                    <polygon radius="2.0" slices="12" stacks="3" color_c="1 0 0 1" color_p="1 1 0 1" />
                </primitive> -->
                <primitive>
                    <rectangle xy1="-2.5 -1.0" xy2="2.5 4.0" />
                </primitive>
            </children>
        </node>

        <node id="base" receiveshadows="true">
            <transforms>
                <translate value3="0 1 0" />
                <rotate value3="-90 0 0" />
            </transforms>

            <materialref id="app2" />

            <children>
                <primitive>
                    <rectangle xy1="-2.5 -2.5" xy2="2.5 2.5" />
                </primitive>
            </children>
        </node>
    </graph> 
</yaf>