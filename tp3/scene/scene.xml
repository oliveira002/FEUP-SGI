    <cameras initial="Cam 1" > 
        <perspective id="Cam 1" 
            angle="75" 
            near="0.1" 
            far="1000" 
            location="11 13 13" 
            target="0 0 0" />  
    </cameras>

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>
        <!-- <texture id="" filepath=""/> -->
    </textures> 

    <!-- bloco de materiais. Este bloco tem de existir mas pode estar vazio, se nao forem usados materiais --> 
    <materials>
        <!-- Default values for required attributes:
        <material id="" 
            emissive="0.0 0.0 0.0 1" 
            color="1.0 1.0 1.0 1.0" 
            specular="0.07 0.07 0.07 0" 
            shininess="30"
            textureref="" />
        -->
    </materials> 

    <graph rootid="scene">
		<node id="scene" castshadows="true" receiveshadows="true"> 
            <children>
                <noderef id="ground" />
            </children>
        </node>

        <node id="ground">
            <transforms>
                <rotate value3="-90 0 0" />
            </transforms>
            
            <children>
                <primitive>
                    <rectangle xy1="-70 -70" xy2="70 70"/>
                </primitive>
            </children>
        </node>
    </graph> 
